datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserAccessType {
  ADMINISTRADOR_DO_SISTEMA
  DIRIGENTE_DO_CLUBE
  TREINADOR
  ATLETA
  VISITANTE
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String         @unique
  password String
  access   UserAccessType

  @@map("users")
}

model Provincia {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
}
